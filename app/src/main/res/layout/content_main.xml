<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="55dp"
        android:text="Calculate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Budget"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="72sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="55dp"
        android:text="Reset" />

    <EditText
        android:id="@+id/txtMonthlyNetIncome"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtRent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtMonthlyNetIncome"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical|center"
        android:text="Monthly Net Income"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/txtRent"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCar"
        android:layout_alignStart="@+id/textView"
        android:ems="10"
        android:hint="Rent"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtCar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtGas"
        android:layout_alignStart="@+id/textView"
        android:ems="10"
        android:hint="Car"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtMemberships"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMonthlyNetIncome"
        android:layout_below="@+id/txtGas"
        android:ems="10"
        android:hint="Memberships"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtTravel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMonthlyNetIncome"
        android:layout_below="@+id/txtMemberships"
        android:ems="10"
        android:hint="Travel"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtStudentLoans"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMonthlyNetIncome"
        android:layout_alignTop="@+id/txtRent"
        android:ems="10"
        android:hint="Student Loans"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtGas"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMonthlyNetIncome"
        android:layout_alignTop="@+id/txtCarInsurance"
        android:ems="10"
        android:hint="Gas"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtGym"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMonthlyNetIncome"
        android:layout_alignTop="@+id/txtCar"
        android:ems="10"
        android:hint="Gym"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtFun"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/txtMemberships"
        android:ems="10"
        android:hint="Fun"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtMiscEtc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/txtMemberships"
        android:ems="10"
        android:hint="Misc/Etc."
        android:inputType="number" />

    <TextView
        android:id="@+id/lblOutputTotalExpenses"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblOutputRemainingBudget"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Enter your expenses above and click Calculate!"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblOutputRemainingBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:text="..."
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtCarInsurance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="217dp"
        android:ems="10"
        android:hint="Car Insurance"
        android:inputType="number" />

</RelativeLayout>